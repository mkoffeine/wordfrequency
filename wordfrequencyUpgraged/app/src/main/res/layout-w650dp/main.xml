    <fragment
        android:name="com.koffeine.wordfrequency2.fragment.WordsListFragment"
        android:id="@+id/list_fragment"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp" />

</LinearLayout>